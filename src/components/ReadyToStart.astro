---
import EmailDemo from "./EmailDemo.svelte";
---

<section>
    <h1>Ready to start?</h2>
    <EmailDemo client:visible/>
</section>

<style>
    h1 {
        margin: 2rem 0;
    }
    @media screen and (min-width: 768px) {
        h1 {
            margin: 2.5rem 0;
        }
    }

    @media screen and (min-width: 1440px) {
        section {
            display: flex;
            margin-right: 5rem;
            margin-left: 5rem;
            margin-bottom: 2rem;
            justify-content: space-between;
            align-items: center;
        }
        h1 {
            font-size: 48px;
            margin: 0;
        }
    }
</style>