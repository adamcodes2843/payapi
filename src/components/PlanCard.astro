---
interface Props {
    plan: string,
    cost: string,
    description: string,
    services: {
        service: string;
        provided: boolean;
    }[]
};

const {plan, cost, description, services} = Astro.props;
---

<div class="plan-div">
    <div class="plan-cost">
        <h4>{plan}</h4>
        <p class="plan-description">{description}</p>
        <h2>{cost}</h2>
    </div>
    <ul>
        {services.map((service) => (
            service.provided ? (
            <li>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" id="pink"><path fill="currentColor" d="m9.55 18l-5.7-5.7l1.425-1.425L9.55 15.15l9.175-9.175L20.15 7.4L9.55 18Z"/></svg>
                <p>{service.service}</p>
            </li>
            )
            : (
            <li>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" id="hide"><path fill="currentColor" d="m9.55 18l-5.7-5.7l1.425-1.425L9.55 15.15l9.175-9.175L20.15 7.4L9.55 18Z"/></svg>
                <p id="opacity">{service.service}</p>
            </li>
            )
        ))}
    </ul>
    <a href="/contact" class="request-access">Request Access</a>
</div>

<style>
    svg {
        width: 12;
        height: 8;
    }
    #pink {
        color: var(--darkPink);
    }
    #hide {
        color: transparent;
    }
    #opacity {
        opacity: 50%;
    }
    .request-access {
        font-weight: 700;
        border: 1px solid var(--sanJuanBlue);
        padding: 1rem 1.5rem;
        border-radius: 40px;
        color: var(--sanJuanBlue)
    }
    .request-access:hover {
        background-color: var(--sanJuanBlue);
        color: var(--linkWaterWhite)
    }
    .plan-div {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
    }
    .plan-description {
        display: none;
    }
    .plan-cost {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 5rem;
        width: 100%;
    }
    h2 {
        font-family: 'DM Serif Display', serif;
        line-height: 72px;
        font-size: 56px;
    }
    h4 {
        font-family: 'DM Serif Display', serif;
        line-height: 32px;
        font-size: 24px;
        color: var(--darkPink);
        font-weight: 400;
    }
    ul {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        border-top: 1px solid rgba(54, 83, 107, 0.2);
        border-bottom: 1px solid rgba(54, 83, 107, 0.2);
        width: 100%;
        padding: 2rem 0;
        margin: 1.5rem 0;
    }
    li {
        display: flex;
        align-items: center;
        justify-content: start;
        gap: 1rem;
        width: 134px;
        font-size: 16px;
    }
    @media screen and (min-width: 768px) {
        .plan-description {
            display: block;
        }
        .plan-cost {
            gap: 1rem
        }
        h2 {
            font-size: 48px;
        }
    }
</style>