---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro'
import HomeStart from '../components/HomeStart.astro';
import Connections from '../components/Connections.astro';
import EasyToImplement from '../components/EasyToImplement.astro';
import SimpleUI from '../components/SimpleUI.astro'
import ReadyToStart from '../components/ReadyToStart.astro';
import HomeServices from '../components/HomeServices.astro';
---

<Layout title="PayAPI">
	<header>
		<Nav />
		<div class="header-circle"></div>
		<img src="../../assets/home/desktop/illustration-phone-mockup.svg" alt="phone" class="phone">
	</header>
	<main>
		<HomeStart />
		<Connections />
		<EasyToImplement />
		<SimpleUI />
		<HomeServices />
		<ReadyToStart />
	</main>
	<footer>
		<Footer />
		<div class="footer-circle"></div>
	</footer>
</Layout>

<style>
	main {
		
	}
	.header-circle {
		width: 780px;
		height: 780px;
		background: rgba(54,83,107,0.2);
		border-radius: 100%;
		position: absolute;
		top: -560px;
		right: 50%;
		margin-right: -390px;
		z-index: -1;
	}
	.phone {
		width: 200px;
		height: 300px;
		display: block;
		margin-left: auto;
		margin-right: auto;
		padding-left: 20px;
	}
	footer {
		position: relative;
		overflow: hidden;
        background-color: var(--mirageBlue);
		margin-top: 5rem;
	}
	.footer-circle {
		width: 780px;
		height: 780px;
		background: rgba(54,83,107,0.15);
		border-radius: 100%;
		position: absolute;
		bottom: -615px;
		right: 50%;
		margin-right: -390px;
		z-index: 1;
	}
</style>
