---
<Layout title="PayAPI Pricing">
    <header>
        <Nav />
        <div class="header-circle"></div>
    </header>
    <main>
        <h1>Pricing</h1>
        <section class="card">
            {plans.map((plan) => (
                <PlanCard plan={plan.plan} cost={plan.cost} services={plan.services} />
            ))}
        </section>
        <ReadyToStart />
    </main>
    <Footer />
</Layout>

<style>
    section {
        display: flex;
        flex-direction: column;
        gap: 3rem;
        margin-bottom: 5rem;
    }
    h1 {
        font-family: 'DM Serif Display', serif;
        font-weight: 400;
        font-size: 36px;
        text-align: center;
        margin: 3rem 0 2.5rem;
    }
    .header-circle {
		width: 780px;
		height: 780px;
		background: rgba(54,83,107,0.2);
		border-radius: 100%;
