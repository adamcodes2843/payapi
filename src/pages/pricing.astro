            }
        ]
    },
    {
        plan: 'Basic Plan',
        cost: "$249.00",
        services: [
            {
                service: 'Transactions',
                provided: true,
            },
            {
                service: 'Auth',
                provided: true,
            },
            {
                service: 'Identity',
                provided: true,
            },
            {
                service: 'Investments',
                provided: true,
            },
            {
                service: 'Assets',
                provided: true,
            },
            {
                service: 'Liabilities',
                provided: false,
            },
            {
                service: 'Income',
                provided: false
